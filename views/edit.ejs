<% include ./partials/head %>
 <link rel="stylesheet" href="/css/portal.css">
 
<section class = "container">
    
    <div class="stretched">

		<div id="wrapper" class="clearfix">

		<!-- Content
		============================================= -->
		<section id="content">

			<div class="content-wrap bg-light">

				<div class="container">

					<div class="row justify-content-center">
						<div class="col-lg-7 col-md-10">
							<div class="card shadow-sm">
								<div class="card-header">
									<h4 class="mb-0">Edit <%=this.job%></h4>
								</div>
								<div class="card-body">

									<div class="form-widget">

										<div class="form-result"></div>

										<div class="form-process css3-spinner">
											<div class="css3-spinner-double-bounce1"></div>
											<div class="css3-spinner-double-bounce2"></div>
										</div>

										<form class="nobottommargin" id="template-contactform" name="template-contactform"
											action='<%=job._id%>?_method=PUT' method='POST'>

											<div class="row">

												<div class="col-12 bottommargin-sm">
													<label for="title">Job Title<small class="text-danger">*</small></label>
													<input type="text" id="title" name="job[title]" value="<%=job.title%>"
														class="form-control required" placeholder="Enter the job title" />
												</div>
												<div class="col-12 bottommargin-sm">
													<label for="location">Location<small class="text-danger">*</small></label>
													<input type="text" id="location" name="job[location]" value="<%=job.location%>"
														class="form-control required" placeholder="Enter Location" />
												</div>

												<div class="col-12 bottommargin-sm">
													<label for="salary">Salary<small class="text-danger">*</small></label>
													<input type="text" id="salary" name="job[salary]" value="<%=job.salary%>"
														class="form-control required" placeholder="Salary" />
												</div>
												<div class="col-12 bottommargin-sm">
													<label for="date">Start Date<small class="text-danger">*</small></label>
													<input type="text" id="date" name="job[date]" value="<%=job.start_date%>"
														class="form-control required" placeholder="Enter the Date" />
												</div>

												<div class="col-12 bottommargin-sm">
													<label for="requirements">Requirements<small
															class="text-danger">*</small></label>
													<textarea class="required form-control textarea-message" id="requirements"
														name="job[requirements]" rows="6" cols="30"></textarea>
												</div>
												<div class="col-12 bottommargin-sm">
													<label for="description">Job Description<small
															class="text-danger">*</small></label>
													<textarea class="required form-control textarea-message" id="description"
														name="job[description]" rows="6" cols="30"></textarea>
												</div>
												<div class="col-12 bottommargin-sm">
													<label for="what_">What you've got?<small
															class="text-danger">*</small></label>
													<textarea class="required form-control textarea-message" id="what_"
														name="job[what_]" rows="6" cols="30"></textarea>
												</div>
												<div class="col-12 bottommargin-sm">
													<label for="other">Other<small
															class="text-danger">*</small></label>
													<textarea class="required form-control textarea-message" id="other"
														name="job[other]" rows="6" cols="30"></textarea>
												</div>



												<div class="col-12">
													<button type="submi" name="template-contactform-submit"
														class="btn btn-secondary btn-block btn-lg">Send</button>
												</div>

											</div>

										</form>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>

			</div>
	</div>

	</section><!-- #content end -->

	<!-- Go To Top
	============================================= -->
	<div id="gotoTop" class="icon-angle-up"></div>


</body>

</html>